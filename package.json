{
  "name": "demo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "build:app": "lerna run build --scope={@Lornz-/common,@Lornz-/app}",
    "postinstall": "lerna bootstrap",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
    "test": "lerna run test --scope={@Lornz-/common,@Lornz-/web}",
    "diff": "lerna diff",
    "clean:modules": "rm -rf node_modules/ && rm -rf packages/*/node_modules/ && rm -r yarn.lock"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "2.0.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lerna-semantic-release": "^9.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
