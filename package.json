{
  "name": "demo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna clean --yes",
    "test": "lerna run test --scope={@lornz-/common,@lornz-/web}",
    "diff": "lerna diff",
    "build-clean": "rimraf ./packages/*/build ./packages/*/dist",
    "build:app": "yarn build-clean && lerna run build --scope={@lornz-/common,@lornz-/app}",
    "release-beta": "cross-env HUSKY_BYPASS=true lerna publish from-git --conventional-prerelease --preid beta",
    "release-stable": "cross-env HUSKY_BYPASS=true lerna publish from-git --conventional-graduate",
    "clean-modules": "rimraf ./node_modules/ ./packages/*/node_modules/ ./yarn.lock",
    "clean-all": "yarn build-clean && yarn clean-modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cross-env": "^7.0.2",
    "cz-lerna-changelog": "2.0.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "release": "^6.1.0",
    "rimraf": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
